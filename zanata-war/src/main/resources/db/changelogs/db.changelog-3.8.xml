<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

  <changeSet id="1" author="aeng@redhat.com">
    <comment>WebhookKey to WebHook</comment>
    <addColumn tableName="WebHook">
      <column name="secret" type="varchar(255)">
        <constraints nullable="true" />
      </column>
    </addColumn>
  </changeSet>

  <changeSet id="2" author="aeng@redhat.com">
    <comment>Add resId to HGlossaryTerm</comment>
    <addColumn tableName="HGlossaryTerm">
      <column name="resId" type="varchar(255)">
        <constraints nullable="false" />
      </column>
    </addColumn>
  </changeSet>

  <changeSet id="3" author="aeng@redhat.com">
    <comment>Generate resId for HGlossaryTerm</comment>
    <customChange class="org.zanata.liquibase.custom.GenerateResIdForGlossaryTerm" />
  </changeSet>

</databaseChangeLog>
